<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolls="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64sp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_notifi"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_notif"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    >
    <TextView
        android:id="@+id/tv_notifi_title"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        toolls:text="Ezzat emad" />

    <TextView
        android:id="@+id/tv_notifi_description"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        toolls:text="Ezzat emad" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
    <ImageView
        android:id="@+id/iv_notifi_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_radio_play"
        android:layout_marginEnd="5dp"
         />

    <ImageView
        android:id="@+id/iv_notifi_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stop_light"
        android:layout_marginStart="5dp"
        />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
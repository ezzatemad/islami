<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    >

    <TextView
        android:id="@+id/tv_vertical_radio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="إذاعة القرآن الكريم"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/islami_word_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/linear_vertical"
        app:layout_constraintWidth_percent=".60"
        />
    <LinearLayout
        android:id="@+id/linear_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".4"
        >
    <ImageView
        android:id="@+id/iv_vertical_play"
        style="@style/radio_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        />
    <ImageView
        android:id="@+id/iv_vertical_stop"
        style="@style/radio_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/linear_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>